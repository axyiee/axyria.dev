</style>

<script>
  document.querySelectorAll(".theme-light.theme-switcher").forEach((switcher) =>
    switcher.addEventListener("click", () => {
      localStorage.setItem("theme", "dark");
      document.documentElement.setAttribute("data-theme", "dark");
    })
  );
</script>

